


{{#if addNewQuestion}}
<h1>Ask me a question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="questionAuthor">What is your name?</label>
        {{input value=questionAuthor id="questionAuthor"}}
      </div>
      <div class="form-group">
        <label for="question">Ask Away</label>
        {{input value=question id="question"}}
      </div>
      <div class="form-group">
        <label for="notes">Details</label>
        {{input value=notes id="notes"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button{{action 'questionFormShow'}}>New Question</button>
{{/if}}
