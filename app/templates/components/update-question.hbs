{{#if updateQuestionForm}}
  <h4>Update {{question.owner}}'s {{question.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="questionAuthor">Author</label>
          {{input value=questionAuthor id="questionAuthor" placeholder=question.questionAuthor}}
        </div>

        <div class="form-group">
          <label for="question">Question</label>
          {{input value=question id="question"}}
        </div>

        <div class="form-group">
          <label for="notes">Notes</label>
          {{input value=notes id="notes" placeholder=question.notes}}
        </div>

        <div class="form-group">
          <label for="answers">Answers</label>
          {{input value=answers id="answers" placeholder=question.answers}}
        </div>



        <button {{action 'update' question}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
